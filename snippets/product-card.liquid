<div class="w-full py-6 px-3">
    <div class="border bg-white shadow-lg rounded-lg overflow-hidden">
        <a href="{{ product.url }}">
            {% if product.featured_image %}
                <div class="h-70 overflow-hidden">
                    <img class="w-full h-full object-cover transition duration-1000 ease-in-out hover:scale-110 transform" src="{{ product.featured_image | img_url: 'medium' }}" alt="{{product.feature_image.alt}}">    
                </div>  
            {% else %}
                {{ "product-1" | placeholder_svg_tag: "w-full h-full object-cover bg-gray-100"}}
            {% endif %}
        </a>

        <div class="flex flex-col p-4">
            <span class="text-gray-300">{{ product.vendor }}</span>
            <a href="{{ product.url }}" class="text-gray-700 uppercase font-medium">{{ product.title }}</a>
            <p class="text-gray-500">{{ product.price | money }}</p>
        </div>

    </div>
</div>
